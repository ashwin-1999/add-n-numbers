#include<stdio.h>
int inputarray(int a,int a[n])
{
     printf("Enter %d number\n",n);
     for(int i=0;i<n;i++)
     {
          scanf("%d",&a[i]);
     }
     return 0;
 }
 intsumarray(int n,int a[n])
 {
     int sum=0;
     for(int i=0;i<n;i++)
     {
           sum=sum+a[i];
     }
     return sum;
 }
 int outputarray(int n,int a[n])
 {
     printf("The entered array\n);
     for(int i=0;i<n;i++)
     {
           printf("%d",a[i]);
           printf("\n");
     }
     printf("\n");
     int s=sumarray(n,a);
     printf("Sum=%d",s);
     return 0;
}
int main()
{
       int a[100],n;
       printf("Enter the size of the array\n");
       scanf("%d",&n);
       inputarray(n,a);
       outputarray(n,a);
       return 0;
 }
